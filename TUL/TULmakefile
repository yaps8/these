# Exemple de Makefile pour une thÃ¨se faite avec thesul
# D. Roegel 1er avril 2013


main.dvi: main.tex 
	latex main
	bibtex main
	makeindex -s tulind.ist -o main.ind main.idx
        makeindex -s tulglo.ist -o main.gls main.glo
	latex main
	makeindex -s tulind.ist -o main.ind main.idx
        makeindex -s tulglo.ist -o main.gls main.glo
	latex main


# L'index:
main.ind:
	makeindex -s tulind.ist -o main.ind main.idx

# Le glossaire:
main.gls: 
	makeindex -s tulglo.ist -o main.gls main.glo

